# BEGIN_KITTY_THEM
# One Dark
include current-theme.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="Hack Nerd Font"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

shell zsh

enable_audio_bell yes

#bell_path = "/usr/share/sounds/gnome/default/alerts/string.oga"

bell_command = "canberra-gtk-play -f /usr/share/sounds/gnome/default/alerts/string.oga"



bell_on_tab "ðŸ”” "

tab_bar_style powerline

map ctrl+shift+t new_tab_with_cwd
map ctrl+shift+enter new_window_with_cwd


background_opacity 0.8
